<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/sbahlkhir" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bande" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/volum_up" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/imageView7"
            android:src="@drawable/volume" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/imageView6"
            android:src="@drawable/volume_down" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView3"
            android:src="@drawable/suivant" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/precedent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView2"
            android:src="@drawable/pause" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/ButtonTest"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/lettre"
                android:drawablePadding="5sp"
                android:paddingLeft="10sp"
                android:text="ENVOYEZ UN SMS"
                android:textColor="#C60B1E" />

            <Button
                android:id="@+id/ButtonTestApl"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="5sp"
                android:paddingLeft="10sp"
                android:text="APPELEZ :"
                android:textColor="#C60B1E" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/CasaApl"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/CasaTxt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="CASABLANCA" />

                    <ImageView
                        android:id="@+id/MarrakechApl"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/MarrakechTxt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="MARRAKECH" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/AgadirApl"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/AgadirTxt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="AGADIR" />

                    <ImageView
                        android:id="@+id/FesApl"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/FesText"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="FES" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>