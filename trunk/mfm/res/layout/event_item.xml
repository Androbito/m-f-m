<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qsfont="http://schemas.android.com/apk/res/m.androbito.mfm"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/background_light"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_camera" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/add" />
    </FrameLayout>

    <m.androbito.utils.QSandTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/frameLayout1"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/frameLayout1"
        android:text="Titre"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#C60B1E"
        android:textSize="15sp"
        android:textStyle="bold"
        qsfont:fontName="Quicksand_Bold.otf" />

    <m.androbito.utils.QSandTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frameLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:text="Ville"
        android:textColor="#6E6E6E"
        qsfont:fontName="Quicksand_Light.otf" />

    <m.androbito.utils.QSandTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#C60B1E"
        android:textSize="10sp"
        android:textStyle="bold"
        qsfont:fontName="Quicksand_Light.otf" />

</RelativeLayout>